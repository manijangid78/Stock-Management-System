<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>News</title>

  <link rel="stylesheet" href="index.css">

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</head>

<body>

    <%- include("navbar"); -%>

    <div class="container">
      <form action="/searchproduct" method="POST">
        
        <!-- color of the role -->
        <div class="mb-3">
          <label class="form-label">Color</label>
          <input type="text" class="form-control" placeholder="White, Red, Blue, etc." name="color" id="color" autofocus>
        </div>

        <!-- size of the stock -->
        <div class="mb-3">
          <div class="row">
            <div class="col">
              <label class="form-label">Width</label>
              <input type="text" class="form-control" placeholder="Width" name="width" id="width">
            </div>
            <div class="col">
              <label class="form-label">Height</label>
              <input type="text" class="form-control" placeholder="Height" name="height" id="height">
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-primary" name="search">Search</button>
        <button type="submit" class="btn btn-primary" name="searchall">Search All</button> 
      </form>

      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Width</th>
            <th scope="col">Height</th>
            <th scope="col">Color</th>
            <th scope="col">Stock</th>
          </tr>
        </thead>

        <tbody>
          <% if(product!=""){ %>
          <% for(var i in  product){ %>
            <tr>
              <th scope="row"><%= product[i].id %></th>
              <td><%= product[i].color %></td>
              <td><%= product[i].width %></td>
              <td><%= product[i].height %></td>
              <td><%= product[i].createdProduct %></td>
            </tr> 
          <% }}else{ %>
            <tr>
              <th scope="row">No Results</th>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <%- include("footer"); -%>
</body>
</html>